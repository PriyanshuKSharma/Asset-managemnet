<% 
const title = 'Reports - AssetFlow';
const body = `
<h2 class="text-2xl font-semibold mb-6">Reports</h2>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold mb-2">Assignment Summary</h3>
    <p>Total Assigned: ${assets.filter(a => a.assigned).length}</p>
    <p>Total Available: ${assets.filter(a => !a.assigned).length}</p>
  </div>
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold mb-2">Asset Types</h3>
    <p>Hardware: ${assets.filter(a => a.type === 'Hardware').length}</p>
    <p>Software: ${assets.filter(a => a.type === 'Software').length}</p>
  </div>
</div>

<div class="bg-white p-6 rounded-lg shadow">
  <h3 class="text-xl font-semibold mb-4">Recent Assignments</h3>
  <div class="overflow-x-auto">
    <table class="min-w-full text-sm">
      <thead class="bg-gray-100">
        <tr>
          <th class="p-3 text-left">Asset</th>
          <th class="p-3 text-left">Employee</th>
          <th class="p-3 text-left">Date Assigned</th>
          <th class="p-3 text-left">Status</th>
        </tr>
      </thead>
      <tbody>
        ${assets.filter(a => a.assigned).map(asset => `
        <tr class="border-t">
          <td class="p-3">${asset.name}</td>
          <td class="p-3">${asset.employee}</td>
          <td class="p-3">${asset.dateAssigned}</td>
          <td class="p-3">
            <span class="text-green-600">Active</span>
          </td>
        </tr>
        `).join('')}
      </tbody>
    </table>
  </div>
</div>
`;
%>
<%- include('layout', { title, body }) %>