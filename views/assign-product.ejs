<% 
const title = 'Assign Product - AssetFlow';
const showSidebar = false;
const body = `
<div class="flex items-center justify-center">
  <div class="bg-white w-full max-w-6xl p-8 rounded-lg shadow-xl">
    <h2 class="text-2xl font-bold text-blue-800 text-center mb-8">Assign Product</h2>
    
    <form action="/assign-product" method="POST">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Product Details</h3>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">Select Product</label>
              <select name="assetId" class="mt-1 w-full rounded-md border-gray-300 shadow-sm" required>
                <option value="">Select product</option>
                ${assets.map(asset => `
                <option value="${asset.id}">${asset.name} - ${asset.serial}</option>
                `).join('')}
              </select>
            </div>
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Employee Details</h3>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">Employee Name</label>
              <input type="text" name="employeeName" class="mt-1 w-full rounded-md border-gray-300 shadow-sm" required>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Date Assigned</label>
              <input type="date" name="dateAssigned" class="mt-1 w-full rounded-md border-gray-300 shadow-sm" required>
            </div>
          </div>
        </div>
      </div>
      
      <div class="mt-10 flex justify-center space-x-4">
        <button type="submit" class="bg-blue-700 text-white px-6 py-2 rounded hover:bg-blue-800">Assign</button>
        <a href="/" class="bg-gray-300 text-gray-800 px-6 py-2 rounded hover:bg-gray-400">Cancel</a>
      </div>
    </form>
  </div>
</div>
`;
%>
<%- include('layout', { title, body, showSidebar }) %>